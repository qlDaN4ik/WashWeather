<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/destination_weather">

    <fragment
        android:id="@+id/destination_weather"
        android:name="com.example.washweather.ui.weather.WeatherFragment"
        android:label="Погода"
        tools:layout="@layout/weather_fragment">

    </fragment>

    <fragment
        android:id="@+id/destination_map"
        android:name="com.example.washweather.ui.map.MapFragment"
        android:label="Карта автомоек"
        tools:layout="@layout/map_fragment"/>

    <fragment
        android:id="@+id/destination_settings"
        android:name="com.example.washweather.ui.settings.SettingsFragment"
        android:label="Настройки"
        tools:layout="@layout/settings_fragment" />

    <fragment
        android:id="@+id/destination_note"
        android:name="com.example.washweather.ui.note.NoteFragment"
        android:label="Заметки"
        tools:layout="@layout/note_fragment" />
</navigation>